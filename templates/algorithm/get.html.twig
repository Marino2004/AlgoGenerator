{% extends 'base.html.twig' %}

{% block title %}Algorithms{% endblock %}

{% block body %}
    <hr>
    <table>
        <tbody>
            {% for data in result %}
                <tr>
                    <td>{{ data.title }}</td>
                    <td>{{ data.theme }}</td>
                    <td class="
                        {% set levelClass = {
                            'Moyen': 'text-moyen',
                            'Facile': 'text-easy'
                        }[data.level.value] | default('text-complex') %}
                        {{ levelClass }}
                    ">
                        <small>{{ data.level.value }} </small>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}